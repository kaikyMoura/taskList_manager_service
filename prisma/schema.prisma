generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  VERY_LOW
  LOW
  MEDIUM
  HIGH
  VERY_HIGH
}

model User {
  id String  @id
  user_name String @unique
  user_password String
  email String @unique
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  tasks Task[]
  user_avatar_url String?
}

model Task {
  id String  @id
  title String
  description String?
  priority Priority
  status Status
  dueDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt

  userId String?
  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
}